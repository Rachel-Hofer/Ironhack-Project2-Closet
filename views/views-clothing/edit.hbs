<div class="formStylingDefaultEdit">
<form action="/clothing/{{theClothing._id}}/update" method="POST" enctype="multipart/form-data">
    <h3>Edit your Clothing</h3><br><br>

{{!-- Image - String--}}
<div class="form-group">
    <img src="{{theClothing.image}}" width="125px">
    <input type="file" name="path">
  </div>


{{!-- Clothing Category Dropdown --}}
  <label class="my-1 mr-2" for="inlineFormCustomSelectPref" name="category">Clothing Category</label>
  <select class="custom-select my-1 mr-sm-2" data-style="btn-info" name="category" >
    <option selected value="{{theClothing.category}}">{{theClothing.category}}</option>
    <option value="ActiveWear">Active Wear</option>
    <option value="DayWear">Day Wear</option>
    <option value="NightWear">Night Wear</option>
    <option value="ProofessionalWear">Professional Wear</option>
    <option value="FormalWear">Formal Wear</option>
  </select>
<br>


{{!-- Seasons Dropdown --}}
<label class="my-1 mr-2" for="inlineFormCustomSelectPref" name"category">Season</label>
  <select class="custom-select my-1 mr-sm-2" data-style="btn-info" name="season">
    <option selected value="{{theClothing.season}}">{{theClothing.season}}</option>
    <option value="Winter">Winter</option>
    <option value="Summer">Summer</option>
    <option value="Spring">Spring</option>
    <option value="Fall">Fall</option>
  </select>
<br>


{{!-- Clothing Type Dropdown --}}

  <label class="my-1 mr-2" for="inlineFormCustomSelectPref" name"category">Clothing Type</label>
  <select class="custom-select my-1 mr-sm-2" data-style="btn-info" name="type">
    <option selected value="{{theClothing.type}}">{{theClothing.type}}</option>
    <option value="top">Top</option>
    <option value="bottom">Bottom</option>
    <option value="dress">Dress</option>
  </select>
<br>


{{!-- Sub-Type - String --}}
  <div class="form-group">
    <label for="exampleInputEmail1">Clothing Sub-Type</label>
    <input class="form-control" id="exampleInputEmail1" name="subType" value="{{theClothing.subType}}">
  </div>


{{!-- Color - String --}}
  <div class="form-group">
    <label for="exampleInputPassword1">Color</label>
    <input type="text" class="form-control" id="exampleInputPassword1" name="color" value="{{theClothing.color}}">
  </div>


